<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="attestation_travail_report">
            <t t-call="web.basic_layout">
                <t t-call="ressource_humaine.report_header_custom"/>
                <div class="page">
                    <strong>
                        <div style="font-size: 20px;text-align: right;">
                            <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d')"/>
                            <span style="display: inline-block;">
                                الجزائر في
                            </span>
                            <span style="display: inline-block;margin-left: 400px;">
                                المدرسة الوطنية للإدارة
                            </span>
                        </div>
                        <br/>
                        <br/>
                        <div style="font-size: 20px;text-align: right;">
                            <span>
                                الأمانة العامة
                            </span>
                        </div>
                        <br/>
                        <br/>
                        <div style="font-size: 20px;text-align: right;">
                            <span>
                                مصلحة تسيير الموارد البشرية
                            </span>
                        </div>
                        <br/>
                        <br/>
                        <div style="font-size: 20px;text-align: right;">
                            <span>
                                رقم ................... /م.و.إ/أ.ع/م.ت.م.ب/2023
                            </span>
                        </div>
                    </strong>
                    <br/>
                    <br/>
                    <br/>
                    <div style="font-size: 40px;text-align: center;">
                        <strong>
                            <span style="border-bottom: 5px double;">
                                شهادة عمل
                            </span>
                        </strong>
                    </div>
                    <br/>
                    <br/>
                    <br/>
                    <br/>
                    <div style="font-size: 20px;text-align: right;">
                        <span>
                            ،أنا الممضي أسفله، المدير العام للمدرسة الوطنية للإدارة
                        </span>
                        <br/>
                        <br/>
                        <div style="font-size: 20px;text-align: right;">
                            <span style="display: inline-block;">
                                <t t-esc="employee.name"/>
                            </span>
                            <t t-if="employee.gender == 'female'">
                                <span style="display: inline-block">
                                    :أشهد أن السيدة
                                </span>
                            </t>
                            <t t-if="employee.gender == 'male'">
                                <span style="display: inline-block">
                                    :أشهد أن السيد
                                </span>
                            </t>
                        </div>
                        <br/>
                        <t t-esc="employee.birthday"/>
                        <t t-if="employee.gender == 'female'">
                            <span>
                                :المولودة بتاريخ
                            </span>
                        </t>
                        <t t-if="employee.gender == 'male'">
                            <span>
                                :المولود بتاريخ
                            </span>
                        </t>
                        <br/>
                        <br/>
                        <span style="display: inline-block;">
                            .إلى غاية يومنا هذا
                        </span>&#160;
                        <t t-esc="employee.date_entrer"/>&#160;
                        <t t-if="employee.gender == 'female'">
                            <span style="display: inline-block;">
                                :ـ عاملة بمؤسستنا منذ تاريخ
                            </span>
                        </t>
                        <t t-if="employee.gender == 'male'">
                            <span style="display: inline-block;">
                                :ـ عامل بمؤسستنا منذ تاريخ
                            </span>
                        </t>
                        <br/>
                        <br/>:
                        <t t-if="employee.gender == 'female'">
                            <span>
                                ـ و تمارس مها مها بصفتها
                            </span>
                        </t>
                        <t t-if="employee.gender == 'male'">
                            <span>
                                ـ و يمارس مها مهي بصفتهي
                            </span>
                        </t>
                        <br/>
                        <br/>
                        <span>
                            <t t-esc="employee.grade_id.intitule_grade"/>&#160;
                        </span>
                    </div>
                    <br/>
                    <br/>
                    <br/>
                    <br/>
                    <br/>
                    <br/>
                    <br/>
                    <br/>
                    <br/>
                    <br/>
                    <br/>
                    <br/>
                    <br/>
                    <br/>
                    <br/>
                    <t t-if="employee.gender == 'male'">
                        <div style="font-size: 20px;text-align: right;">
                            <span>
                                .تسلم هذه الشهادة للمعني للإدلاء بها في إطار ما يسمح به القانون
                            </span>
                        </div>
                    </t>
                    <t t-if="employee.gender == 'female'">
                        <div style="font-size: 20px;text-align: right;">
                            <span>
                                .تسلم هذه الشهادة للمعنية للإدلاء بها في إطار ما يسمح به القانون
                            </span>
                        </div>
                    </t>
                </div>
            </t>
        </template>

    </data>
</odoo>