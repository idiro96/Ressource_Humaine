<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="header_assets_common_ar" name="header_arabic_font" inherit_id="web.report_assets_common">
            <xpath expr="." position="inside">
                <link href="/ressource_humaine/static/src/css/arabic_font.css" rel="stylesheet"/>
            </xpath>
        </template>
        <template id="header_assets_common_fr" name="header_latin_font" inherit_id="web.report_assets_common">
            <xpath expr="." position="inside">
                <link href="/ressource_humaine/static/src/css/latin_font.css" rel="stylesheet"/>
            </xpath>
        </template>
        <template id="fiche_information_report">
            <t t-call="web.basic_layout">
                <t t-call="ressource_humaine.report_header_custom_bordered"/>
                <div class="page"
                     style="border-bottom: 10px double black;border-left: 10px double black;border-right: 10px double black;">
                    <br/>
                    <br/>
                    <strong>
                        <div class="texte-en-gras" style="font-size: 50px;text-align: right;">
                            <span style="margin-right:15px;word-spacing: 9px;">
                                المدرسة الوطنية للإدارة
                            </span>
                        </div>
                    </strong>
                    <br/>
                    <br/>
                    <div class="texte-en-gras"
                         style="font-size: 50px; text-align: center;">
                        <strong>
                            <span style="border-bottom: 5px double;">
                                بطاقة معلومات
                            </span>
                        </strong>
                    </div>
                    <br/>
                    <br/>
                    <div class="arabic_typesetting"
                         style="font-size: 37px;text-align: right;margin-right:15px;line-height: 1.6;word-spacing: 9px;">
                        <div style="float: left; margin-left: 15px;">
                            <!-- Placeholder for the employee's photo -->
                            <div style="width: 150px; height: 200px; border: 2px solid black; text-align: center; line-height: 200px;">
                                صورة الموظف
                            </div>
                        </div>
                        <span style="margin-right: 15px;">
                        <table style="width: 80.9%;">

                                <tr>
                                    <th style="border:2px solid white;vertical-align:middle;text-align:left;width:20%;height:30px">
                                         <span style="margin-right:15px;margin-left:15px">
                                Prenom:
                                <t t-esc="employee.prenom_fr"/>
                            </span>
                                    </th>
                                    <th style="border:2px solid white;vertical-align:middle;text-align:right;width:15%;height:30px">
                                           <span style="margin-right:15px;margin-left:15px">
                                الاسم:
                                <t t-esc="employee.prenom_ar"/>
                                        </span>
                                    </th>
                                </tr>
                        </table>

                        <table style="width: 80.9%;">
                            <thead>
                                <tr>
                                        <th style="border:2px solid white;vertical-align:middle;text-align:left;width:20%;height:30px">
                                          <span style="margi9n-right:15px;margin-left:15px">
                                            Nom:
                                             <t t-esc="employee.nom_fr"/>
                                        </span>
                                    </th>
                                    <th style="border:2px solid white;vertical-align:middle;text-align:right;width:20%;height:30px">
                                          <span style="margin-right:15px;margin-left:15px">
                                            اللقب:
                                             <t t-esc="employee.nom_ar"/>
                                        </span>
                                    </th>

                                </tr>
                            </thead>
                        </table>
                        </span>
                        <span>
                            تاريخ و مكان الميلاد:
                            <t t-esc="employee.birthday"/>
                        </span>
                        <br/>
                        <span>
                            اسم الأب:
                            <t t-esc="employee.prenom_pere"/>
                        </span>
                        <br/>
                        <span>
                            اسم و لقب الأم:
                            <t t-esc="employee.nom_mere"/>
                        </span>
                        <br/>
                        <span>
                            الحالة العائلية:
                            <t t-esc="employee.marital"/>
                        </span>
                        <br/>
                        <span>
                            عدد الأولاد:
                            <t t-esc="employee.children"/>
                        </span>
                        <br/>
                        <span>
                            العنوان:
                            <t t-esc="employee.address_perso"/>
                        </span>
                        <br/>
                        <span>
                            رقم الضمان الاجتماعي:
                            <t t-esc="employee.numero_securite_social"/>
                        </span>
                        <br/>
                        <span>
                            الشهادات و المؤهلات:
                            <t t-esc="employee.historique_diplome_lines.diplôme"/>
                        </span>
                        <br/>
                        <span>
                            تاريخ الالتحاق بالمدرسة:
                            <t t-esc="employee.date_entrer"/>
                        </span>
                        <br/>
                        <span>
                            تاريخ أول توظيف:
                            <t t-esc="employee.date_debut_emploi"/>
                        </span>
                        <br/>
                        <span>
                            الرتبة الحالية:
                            <t t-esc="employee.grade_id.intitule_grade"/>
                        </span>
                        <br/>
                        <span>
                            تاريخ الترقية في الرتبة الحالية:
                            <t t-esc="employee.date_grade"/>
                        </span>
                        <br/>
                        <span>
                            مصلحة التعيين:
                            <t t-esc="employee.historique_structure_lines.structure"/>
                        </span>
                    </div>
                </div>

            </t>
        </template>

    </data>
</odoo>