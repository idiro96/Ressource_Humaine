<odoo>
    <data>

        <record model="ir.ui.view" id="droit_avencement_wizard">
            <field name="name">droit aux avencement</field>
            <field name="model">droit.avencement</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                       <field name="date_avancement" string = "Date Avancement"/>
                    </group>
                    <footer>
                        <button name="actualiser_droit_avencement" string="Actualiser Droit Avencement" type="object"
                                class="btn-danger text-uppercase"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>