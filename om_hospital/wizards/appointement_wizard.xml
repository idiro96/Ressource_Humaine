<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="appointment_form" model="ir.ui.view">
        <field name="name">appointment form</field>
        <field name="model">appointment.wizard</field>
        <field name="arch" type="xml"/>
        <form string="un nom">
            <groupe>
                <field name="name"/>
                <field name="note"/>
            </groupe>
            <footer>
                <button name="nom" string="affichage_create" type="object" class="btn-primary"/>
                <button string="affichage_cancel" class="btn-secondary" spacial="cancel"/>
            </footer>
        </form>
    </record>

    <record id="action_appointment" model="ir.actions.act_window">
        <field name="name">action appointment</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="appointment_form"/>
        <field name="target">new</field>
    </record>
</odoo>