<odoo>
    <record id="view_rh_grade_tree" model="ir.ui.view">
        <field name="name">rh.grade.tree</field>
        <field name="model">rh.grade</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code" string="Code"/>
                <field name="intitule_grade" string="Grade"/>
                <field name="corps_id" string="Corps"/>
                <field name="filiere_id" string="Filier" options="{'no_create_edit': True,'no_quick_create': True,'no_create': True,'no_open': True}"/>
                <field name="loi_id" string="Loi" options="{'no_create_edit': True,'no_quick_create': True,'no_create': True,'no_open': True}"/>
            </tree>
        </field>

    </record>
    <record id="view_rh_grade_form" model="ir.ui.view">
        <field name="name">rh.grade.form</field>
        <field name="model">rh.grade</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="code" string="Code"/>
                            <field name="intitule_grade" string="Grade"/>
                        </group>
                        <group>
                            <field name="loi_id" string="Loi" options="{'no_create_edit': True,'no_quick_create': True,'no_create': True,'no_open': True}"/>
                            <field name="filiere_id" string="Filier" options="{'no_create_edit': True,'no_quick_create': True,'no_create': True,'no_open': True}"/>
                            <field name="corps_id" string="Corps" options="{'no_create_edit': True,'no_quick_create': True,'no_create': True,'no_open': True}"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_rh_grade" model="ir.actions.act_window">
        <field name="name">grade</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">rh.grade</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Cr√©ation d'un grade</p>
        </field>
    </record>
    <menuitem name="Grade" id="ressource_humaine_grade" parent="promotion_id"
           action="action_rh_grade"/>
</odoo>