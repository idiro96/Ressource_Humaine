<odoo>
    <record id="view_rh_droit_conge_tree" model="ir.ui.view">
        <field name="name">droit conge tree</field>
        <field name="model">rh.congedroit</field>
        <field name="arch" type="xml">
            <tree>
                <field name="id_personnel" string="Emplyee"/>
                <field name="exercice_conge" string="Exercice Conge"/>
                 <field name="nbr_jour" string="Nbr Jour"/>
                <field name="nbr_jour_consomme" string="Nbr Jour Consomme"/>
                <field name="nbr_jour_reste" string="Nbr Jour Reste"/>
            </tree>
        </field>

    </record>
    <record id="view_rh_droit_conge_form" model="ir.ui.view">
        <field name="name">rh congedroit form</field>
        <field name="model">rh.congedroit</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="id_personnel" string="Emplyee"/>
                            <field name="exercice_conge" string="Exercice Conge"/>
                            <field name="nbr_jour" string="Nbr Jour"/>
                        </group>
                        <group>
                            <field name="nbr_jour_consomme" string="Nbr Jour Consomme"/>
                            <field name="nbr_jour_reste" string="Nbr Jour Reste"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_rh_droit_conge" model="ir.actions.act_window">
        <field name="name">Droit Conge</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">rh.congedroit</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create your first conge droit!</p>
        </field>
    </record>
            <menuitem name="Droit Conge" id="ressource_humaine_droit_conge" parent="conge_id"
           action="action_rh_droit_conge"/>
</odoo>