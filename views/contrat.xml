<odoo>
    <record id="view_rh_contrat_tree" model="ir.ui.view">
        <field name="name">rh.contrat.tree</field>
        <field name="model">rh.contrat</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code_contrat" string="Code contrat"/>
                <field name="date_debut_contrat" string="Date de début"/>
                <field name="date_fin_contrat" string="Date de fin"/>
                <field name="salaire_base_contrat" string="Salaire de base"/>
                <field name="type_contrat_id" string="Type Contrat"/>
            </tree>
        </field>

    </record>
    <record id="view_rh_contrat_form" model="ir.ui.view">
        <field name="name">rh.contrat.form</field>
        <field name="model">rh.contrat</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                         <group>
                         <field name="code_contrat" string="Code contrat"/>
                         <field name="date_debut_contrat" string="Date de début"/>
                         <field name="date_fin_contrat" string="Date de fin"/>
                         </group>
                         <group>
                         <field name="type_contrat_id" string="Type Contrat"/>
                         <field name="salaire_base_contrat" string="Salaire de base"/>
                         <field name="motif_contrat" string="Motif"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_rh_contrat" model="ir.actions.act_window">
        <field name="name">Contrat</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">rh.contrat</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Création du contrat</p>
        </field>
    </record>
            <menuitem name="Contrat" id="ressource_humaine_contrat" parent="employee_gestion"
           action="action_rh_contrat"/>
</odoo>