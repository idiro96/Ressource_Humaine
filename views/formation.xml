<odoo>
    <record id="view_rh_formation_tree" model="ir.ui.view">
        <field name="name">rh.formation.tree</field>
        <field name="model">rh.formation</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code_for" string="Code formation"/>
                <field name="date_debut_formation" string="Date de début"/>
                <field name="date_fin_formation" string="Date de fin"/>
                <field name="type_formation_id" string="Type Formation"/>
                <field name="organisme_id" string="Organisme"/>
            </tree>
        </field>

    </record>
    <record id="view_rh_formation_form" model="ir.ui.view">
        <field name="name">rh.formation.form</field>
        <field name="model">rh.formation</field>
        <field name="arch" type="xml">
            <form>
                <header>
                <button name="formation_detail_wizard" type="object" string="Detail formation" class="oe_highlight"/>
                </header>
                <sheet>
                    <group>
                         <group>
                             <field name="code_for" string="Code formation"/>
                              <field name="intitule_formation" string="Thème"/>
                             <field name="date_debut_formation" string="Date de début"/>
                             <field name="date_fin_formation" string="Date de fin"/>
                             <field name="type_formation_id" string="Type Formation"/>
                         </group>
                         <group>
                             <field name="lieu_formation" string="Lieu de déroulement"/>
                             <field name="salle_formation" string="N° Salle"/>
                             <field name="budget_allouee_formation" string="Budget alloué"/>
                             <field name="organisme_id" string="Organisme Accueil"/>
                         </group>
                    </group>
                         <notebook>
                       <page string="Formation Détail">
                         <field name="formation_lines">
                           <tree editable="bottom">
                             <field name="employee_id"/>
                             <field name="date_debut_formation_line" string = "Date Debut"/>
                             <field name="date_fin_formation_line" string = "Date Fin"/>
                             <field name="groupe" string = "Groupe"/>
                             <button name="formation_absence" type="object" string="Absence" class="oe_highlight"/>

                           </tree>
                         </field>
                        </page>
                        <page string="Formation Absence">
                           <field name="formation_absence">
                           <tree editable="bottom">
                             <field name="employee_id"/>
                             <field name="date_absence"/>
                           </tree>
                         </field>
                       </page>
                            <page string="Liste des Fichiers">
                         <field name="formation_file_lines">
                           <tree editable="bottom">
                             <field name="type_file_id" domain="[('type_file', '=', 'formation')]"/>
                             <field name="description_fichier" string="Observation"/>
                             <field name="fichier" string="Fichier"/>
                           </tree>
                         </field>
                       </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_rh_formation" model="ir.actions.act_window">
        <field name="name">Formation</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">rh.formation</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Création de la formation</p>
        </field>
    </record>
            <menuitem name="Formation" id="ressource_humaine_formation" parent="formation_id"
           action="action_rh_formation"/>
</odoo>