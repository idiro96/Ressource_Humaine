<odoo>
    <data>
        <record model="ir.ui.view" id="employee_list">
            <field name="name">employee inherit</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_tree"/>
            <field name="arch" type="xml">
                <tree>

                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="employee_form">
            <field name="name">employee inherit</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form//sheet//notebook//page//group//group//field[@name='place_of_birth']" position="after">
                    <field name="handicape" string="Handicape"/>
                </xpath>
                <xpath expr="//form//sheet//notebook//page//group//group//field[@name='bank_account_id']" position="after">
                    <field name="service_militaire" string="Service Militaire"/>
                </xpath>
                <xpath expr="//form//sheet//notebook//page//group//group//field[@name='resource_calendar_id']" position="after">
                    <field name="fin_relation" string="Fin Relation"/>
                </xpath>
                <xpath expr="//form//sheet//notebook//page//group//group//field[@name='fin_relation']" position="after">
                    <field name="date_fin_relation" string="Date Fin Relation"/>
                </xpath>
                <xpath expr="//form//sheet//notebook//page//group//group//field[@name='date_fin_relation']" position="after">
                    <field name="date_reintegration" string="Date Reintegration"/>
                </xpath>
                <xpath expr="//form//sheet//notebook//page//group//group//field[@name='department_id']" position="before">
                    <field name="date_entrer" string="Date Entrer"/>
                </xpath>
                <xpath expr="//form//sheet//notebook//page//group//group//field[@name='marital']" position="after">
                    <field name="activite_conjoint" string="Activite Conjoint"/>
                </xpath>
            </field>

        </record>
        <record model="ir.actions.act_window" id="action_ressource_humaine">
            <field name="name">employee</field>
            <field name="res_model">hr.employee</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="hr.view_employee_tree"/>

        </record>

        <menuitem name="Ressource Humaine" id="ressource_humaine.menu_root"  web_icon="ressource_humaine,description/icon.png"/>
        <menuitem name="Gestion Employee" id="employee_gestion" parent="ressource_humaine.menu_root"/>
        <menuitem name="Suivi Personnel" id="suivi_personnel_id" parent="ressource_humaine.menu_root"/>
        <menuitem name="Recrutement" id="recrutement_id" parent="ressource_humaine.menu_root"/>
        <menuitem name="Formation" id="formation_id" parent="ressource_humaine.menu_root"/>
        <menuitem name="Médecine Travail" id="medecine_travai_id" parent="ressource_humaine.menu_root"/>
        <menuitem name="Référentiels" id="referentiel_id" parent="ressource_humaine.menu_root"/>
        <menuitem name="Congé" id="conge_id" parent="ressource_humaine.menu_root"/>
        <menuitem name="Employee" id="ressource_humaine_employee" parent="employee_gestion"
           action="action_ressource_humaine"/>


    </data>

</odoo>