<odoo>
    <record id="view_avancement_tree" model="ir.ui.view">
        <field name="name">rh.avancement.tree</field>
        <field name="model">rh.avancement</field>
        <field name="arch" type="xml">


            <tree>
                <field name="code"/>
                <field name="date_avancement"/>

            </tree>
        </field>

    </record>
    <record id="view_avancement_form" model="ir.ui.view">
        <field name="name">rh.avancement.form</field>
        <field name="model">rh.avancement</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="date_avancement"/>
                            <field name="avancement_wizard" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Liste Personnel" attrs="{'invisible': [('id', '!=', False)]}">
                            <field name="avancement_lines_wizard" widget="one2many_list">
                                <tree editable="bottom">
                                    <field name="employee_id" readonly="1"/>
                                    <field name="type_fonction_id" readonly="1"/>
                                    <field name="groupe_old_id" readonly="1"/>
                                    <field name="categorie_old_id" readonly="1"/>
                                    <field name="section_old_id" readonly="1"/>
                                    <field name="echelon_old_id" readonly="1"/>
                                    <field name="code_type_fonction" invisible="1"/>
                                    <field name="auto_filled_field" invisible="1"/>
                                    <field name="groupe_new_id" attrs="{'readonly': [('code_type_fonction', '=', 'fonctionsuperieure')]}">
                                            </field>
                                    <field name="categorie_new_id"/>
                                    <field name="section_new_id" attrs="{'readonly': [('code_type_fonction', '=', 'fonction')]}"/>
                                    <field name="echelon_new_id"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>

                    <notebook>
                        <page string="Liste de Personnel" attrs="{'invisible': [('id', '=', False)]}">
                            <field name="avancement_lines" widget="one2many_list">
                                <tree editable="bottom">
                                    <field name="employee_id" readonly="1"/>
                                    <field name="groupe_old_id" readonly="1"/>
                                    <field name="categorie_old_id" readonly="1"/>
                                    <field name="section_old_id" readonly="1"/>
                                    <field name="echelon_old_id" readonly="1"/>
                                    <field name="groupe_new_id" readonly="1"/>
                                    <field name="categorie_new_id" readonly="1"/>
                                    <field name="section_new_id" readonly="1"/>
                                    <field name="echelon_new_id" readonly="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_rh_avancement" model="ir.actions.act_window">
        <field name="name">avancement</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">rh.avancement</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Creation avancement!</p>
        </field>
    </record>
    <menuitem name="Avancement" id="avancement_id" parent="promotion_id" sequence="4"/>
    <menuitem name="avancement" id="ressource_humaine_avancement" parent="avancement_id" sequence="5"
              action="action_rh_avancement"/>
</odoo>