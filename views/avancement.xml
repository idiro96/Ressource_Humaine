        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                <field name="code"/>
                <field name="date_avancement"/>
                        </group>
                    </group>
                     <notebook>
                         <page string="Liste Employee">
                         <field name="avancement_lines_wizard">
