<odoo>
    <record id="view_rh_enfant_tree" model="ir.ui.view">
        <field name="name">RH Enfant tree</field>
        <field name="model">rh.enfant</field>
        <field name="arch" type="xml">
            <tree>
                <field name="nom_enfant" string="Nom Enfant"/>
                <field name="prenom_enfant" string="Prenom Enfant"/>
                 <field name="employee_id" string="Employe"/>
                <field name="date_naissance_enfant" string="Date Naissance Enfant"/>
                <field name="scolarite" string="Scolarite"/>
            </tree>
        </field>

    </record>
    <record id="view_rh_enfant_form" model="ir.ui.view">
        <field name="name">RH Enfant form</field>
        <field name="model">rh.enfant</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="employee_id" string="Employe" options="{'no_create_edit': True,'no_quick_create': True,'no_create': True,'no_open': True}"/>
                            <field name="nom_enfant" string="Nom Enfant"/>
                            <field name="prenom_enfant" string="Prenom Enfant"/>
                        </group>
                        <group>
                            <field name="date_naissance_enfant" string="Date Naissance Enfant"/>
                            <field name="scolarite" string="Scolarite"/>
                        </group>

                    </group>
                          <notebook>
                            <page string="Liste des Fichiers">
                         <field name="enfant_file_lines">
                           <tree editable="bottom">
                             <field name="type_file_id" domain="[('type_file', '=', 'employe')]"/>
                             <field name="description_fichier" string="Observation"/>
                             <field name="fichier" string="Fichier"/>
                           </tree>
                         </field>
                       </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_rh_enfant" model="ir.actions.act_window">
        <field name="name">Enfant</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">rh.enfant</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create your first conjoint!</p>
        </field>
    </record>
            <menuitem name="Enfant" id="ressource_humaine_enfant" parent="employee_gestion"
           action="action_rh_enfant"/>
</odoo>